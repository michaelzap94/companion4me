<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testClear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#03A9F4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/calltextid"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_weight="0.05"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="179dp"
        android:layout_height="100dp"
        android:id="@+id/imgUserAvatarCallingProfile"
        android:layout_below="@+id/calltextid"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.31"
        />

    <TextView
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:id="@+id/namepersoncallingto"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:layout_below="@+id/imgUserAvatarCallingProfile"

        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_weight="0.67">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_call"
            android:layout_weight="0.05"
            android:layout_below="@+id/textView5"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/end_call"
            android:background="@drawable/endcallbutton"
            android:padding="7dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</LinearLayout>