<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikey.database.UserProfile.UserSettings"
    android:background="#03A9F4"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Guide"
            android:id="@+id/btnUserGuide"
            android:background="@drawable/button_login"
            android:layout_margin="5dp"
            android:textColor="#727272" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:id="@+id/btnEditProfile"
            android:background="@drawable/button_login"
            android:layout_margin="5dp"
            android:textColor="#727272" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Security Details"
            android:id="@+id/btnSecDet"
            android:background="@drawable/button_login"
            android:layout_margin="5dp"
            android:textColor="#727272" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/btnChangePassword"
            android:background="@drawable/button_login"
            android:textColor="#727272"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit User Interests"
            android:id="@+id/btnEditUserInterests"
            android:background="@drawable/button_login"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="#727272" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blocked Contact"
            android:id="@+id/btnBlockContact"
            android:background="@drawable/button_login"
            android:layout_margin="5dp"
            android:textColor="#727272" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/btnLogOut"
            android:background="@drawable/button_login"
            android:layout_margin="5dp"
            android:textColor="#727272" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:id="@+id/btnDeleteAccount"
            android:background="@drawable/button_login"
            android:layout_margin="5dp"
            android:textColor="#727272" />
    </LinearLayout>
</RelativeLayout>
